#include<bits/stdc++.h>
#define int long long
using namespace std;
 
int32_t main()
{
	int n, k;
	cin >> n >>k;
	
	if(n%2 == 0)
	{
		if(k <= n/2)
		{
			cout << 2*k -1;
		}
		else
		{
			k = k- n/2;
			cout << 2*k;
		}
	}
	else
	{
		if(k <= (n/2 + 1))
		cout << 2*k-1;
		else
		{
			k = k- (n/2 + 1);
			cout << 2*k;
		}
	}
   
}
