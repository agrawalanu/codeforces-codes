#include<bits/stdc++.h>

using namespace std;

int main()
{
	string s;
	cin >> s;
	string t;
	cin >> t;
	bool flag = true;
	if(s.size() != t.size())
		cout << "NO";
	else
	{
		for(int i =0; i<s.size(); i++)
		{
			if(s[i] == t[s.size() -1-i])
			continue;
			else 
			flag = false;
		}
		puts(flag?"YES":"NO");
		
		}
	
}
