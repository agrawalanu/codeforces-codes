#include<bits/stdc++.h>

using namespace std;

int main()
{
	int n;
	 cin >> n;
	 
	 for(int i =1; i<= n +1; i++)
	 {
	 	for(int j =1; j<=2*n -2*(i-1); j+=1)
	 		cout << " ";
	 		
	 	for(int x =0; x<i-1; x++)
	 		cout << x << " ";
	 	
	 	for(int k = i-1; k>=0; k--)
	 	{
		 	if(k==0)
	 		cout << k;
	 		else
	 		cout << k << " ";
	 	}	
	 	cout << endl;
	 }
	 for(int i = n; i>=1; i--)
	 {
	 	for(int j =1; j<=2*n -2*(i-1); j+=1)
	 		cout << " ";
	 		
	 	for(int x =0; x<i-1; x++)
	 		cout << x << " ";
	 	
	 	for(int k = i-1; k>=0; k--)
	 	{
		 	if(k==0)
	 		cout << k;
	 		else
	 		cout << k << " ";
	 	}		
	 	cout << endl;
	 }
}
